@model List<AppEmpleadoCrud.Models.Empleado>
@{
    ViewData["Title"] = "Home Page";
}

<div >
    <h1 class="text-center">Mantenimiento de Empleados</h1>
</div>
<hr />

<div class="card">
    <div class="card-header">
        <h5>Lista de empleados</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn" asp-action="Empleado_Detalle" asp-controller="Home" asp-route-idEmpleado="0">Crear Nuevo</a>
    </div>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre Completo</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Cargo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreCompleto</td>
                    <td>@item.Correo</td>
                    <td>@item.Telefono</td>
                    <td>@item.oCargo.Descripcion</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Empleado_Detalle" asp-controller="Home" asp-route-idEmpleado="@item.IdEmpleado">Editar</a>
                        <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-idEmpleado="@item.IdEmpleado">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>